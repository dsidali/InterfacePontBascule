                @Html.DisplayNameFor(model => model.Parc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumBonA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transporteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDeTransport)
