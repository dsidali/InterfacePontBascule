<form id="account" method="post">
    <div class="input-group mb-3">
        

        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />


        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mot de passe" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
               
                <input class="form-check-input" asp-for="Input.RememberMe" id="remember" />
                @* @Html.DisplayNameFor(m => m.Input.RememberMe)*@
                @*Se souvenir de moi?*@
                <label for="remember">
                    Se souvenir de moi
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary ">Connecter</button>
        </div>
        <!-- /.col -->
    </div>
</form>

