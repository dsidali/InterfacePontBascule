                @Html.DisplayNameFor(model => model.Observation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Parc.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumBonA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transporteur)
