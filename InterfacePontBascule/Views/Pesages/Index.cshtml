                @Html.DisplayFor(modelItem => item.TypeDeCamion.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Termine)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
