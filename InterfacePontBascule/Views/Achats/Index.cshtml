@model IEnumerable<InterfacePontBascule.Models.Achat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List des achats en attente de reprise</h1>

<p>
    <a asp-action="New" class="btn btn-primary">Nouvelle operation</a> | <a asp-action="ListFinished" class="btn btn-primary">Lister terminés</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParcId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumBonA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transporteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDeTransport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDeCamion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDeDechet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PQRa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PQS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Parc.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumBonA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transporteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDeTransport.TypeTransport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDeCamion.TypeCamion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDeDechet.TypeDechet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PQRa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PQS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Termine)
            </td>
            <td>
                <a asp-action="Reprise" asp-route-id="@item.Id">Reprise</a>|
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
