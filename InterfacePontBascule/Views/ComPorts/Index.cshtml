@model IEnumerable<InterfacePontBascule.Models.ComPort>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaudeRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataBits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceivedBytesThreshold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtrEnable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RtsEnable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaudeRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataBits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedBytesThreshold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtrEnable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RtsEnable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
